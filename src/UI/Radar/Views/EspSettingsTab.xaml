<UserControl x:Class="LoneEftDmaRadar.UI.Radar.Views.EspSettingsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LoneEftDmaRadar.UI.Radar.Views"
             xmlns:conv="clr-namespace:LoneEftDmaRadar.UI.Misc"
             xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Radar.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:controls="clr-namespace:LoneEftDmaRadar.UI.Controls"
             mc:Ignorable="d"
             Padding="10">

    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:SettingsViewModel}"
                          IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>

    <UserControl.Resources>
        <conv:StringToColorConverter x:Key="StringToColorConverter" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical"
                    Margin="0,0,0,10">

            <Button Content="Start Fuser"
                    Command="{Binding StartEspCommand}"
                    Padding="15,8"
                    Margin="0,4,0,8"
                    ToolTip="Opens the ESP Window in Fullscreen Mode."/>

            <!-- General card -->
            <GroupBox Header="General" Margin="0,0,0,8">
                <StackPanel>
                    <WrapPanel Margin="0,0,0,8">
                        <TextBlock Text="Target Screen:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox Width="300"
                                  ItemsSource="{Binding AvailableScreens}"
                                  SelectedValue="{Binding EspTargetScreen, Mode=TwoWay}"
                                  SelectedValuePath="Index"
                                  DisplayMemberPath="DisplayName"
                                  ToolTip="Select which monitor to display the ESP window on"/>
                    </WrapPanel>
                    <WrapPanel Margin="0,0,0,8">
                        <TextBlock Text="Resolution Override:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Width="65" Text="{Binding EspScreenWidth, Mode=TwoWay}" Margin="0,0,8,0" ToolTip="Width (e.g. 1920, 2560). Set to 0 to auto-detect."/>
                        <TextBlock Text="x" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBox Width="65" Text="{Binding EspScreenHeight, Mode=TwoWay}" ToolTip="Height (e.g. 1080, 1440). Set to 0 to auto-detect."/>
                        <TextBlock Text="(0 = Auto)" VerticalAlignment="Center" Margin="8,0,0,0"
                                   Foreground="{DynamicResource App.TextMutedBrush}" FontSize="11"/>
                    </WrapPanel>
                    <WrapPanel Margin="0,0,0,4">
                        <TextBlock Text="Font Family:" VerticalAlignment="Center" Width="90"/>
                        <TextBox Width="180"
                                 Text="{Binding EspFontFamily, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Use any installed font family name (e.g. Segoe UI, Arial, Consolas)"/>
                    </WrapPanel>
                    <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="Sizes (S/M/L):" VerticalAlignment="Center" Width="90"/>
                        <TextBox Width="50"
                                 Text="{Binding EspFontSizeSmall, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Small text size (loot labels)"/>
                        <TextBlock Text="/" VerticalAlignment="Center" Margin="6,0"/>
                        <TextBox Width="50"
                                 Text="{Binding EspFontSizeMedium, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Medium text size (names, exfils)"/>
                        <TextBlock Text="/" VerticalAlignment="Center" Margin="6,0"/>
                        <TextBox Width="50"
                                 Text="{Binding EspFontSizeLarge, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 ToolTip="Large text size (status text)"/>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- Player ESP card -->
            <GroupBox Header="Player ESP" Margin="0,0,0,8">
                <StackPanel>
                    <WrapPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,8">
                            <TextBlock Text="Box:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <ComboBox Width="85" ItemsSource="{Binding BoxStyles}" SelectedItem="{Binding EspPlayerBoxStyle, Mode=TwoWay}"/>
                        </StackPanel>
                        <CheckBox Content="Skeleton" IsChecked="{Binding EspPlayerSkeletons, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Names" IsChecked="{Binding EspPlayerNames, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Health" IsChecked="{Binding EspPlayerHealth, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Group IDs" IsChecked="{Binding EspGroupIds, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Group Colors" IsChecked="{Binding EspGroupColors, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Faction Text" IsChecked="{Binding EspPlayerFaction, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Distance" IsChecked="{Binding EspPlayerDistance, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Weapons" IsChecked="{Binding EspPlayerWeapons, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Head Circle" IsChecked="{Binding EspHeadCirclePlayers, Mode=TwoWay}" Margin="0,0,16,8" ToolTip="Head circles inherit the entity color" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="Max Distance (0 = Unlimited):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="PlayerDistanceSlider"
                                Width="300"
                                Margin="0,0,8,0"
                                Minimum="0"
                                Maximum="1000"
                                SmallChange="10"
                                LargeChange="100"
                                Value="{Binding EspPlayerMaxDistance, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=PlayerDistanceSlider, StringFormat='{}{0:F0}m'}"
                                   VerticalAlignment="Center"
                                   MinWidth="50"/>
                    </WrapPanel>
                    <WrapPanel Margin="0,8,0,0">
                        <TextBlock Text="Label Position (Players):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox Width="140"
                                  ItemsSource="{Binding LabelPositions}"
                                  SelectedItem="{Binding EspLabelPosition, Mode=TwoWay}"
                                  ToolTip="Choose where the player label is drawn relative to the bounding box."/>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Color:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <controls:NeonColorSwatch
                                              SelectedColor="{Binding EspColorPlayers, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,4,0,0" VerticalAlignment="Center">
                            <TextBlock Text="BEAR:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <controls:NeonColorSwatch
                                              SelectedColor="{Binding EspColorFactionBear, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"/>
                            <TextBlock Text="USEC:" VerticalAlignment="Center" Margin="10,0,6,0"/>
                            <controls:NeonColorSwatch
                                              SelectedColor="{Binding EspColorFactionUsec, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- AI ESP card -->
            <GroupBox Header="AI ESP" Margin="0,0,0,8">
                <StackPanel>
                    <WrapPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,16,8">
                            <TextBlock Text="Box:" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <ComboBox Width="85" ItemsSource="{Binding BoxStyles}" SelectedItem="{Binding EspAIBoxStyle, Mode=TwoWay}"/>
                        </StackPanel>
                        <CheckBox Content="Skeleton" IsChecked="{Binding EspAISkeletons, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Names" IsChecked="{Binding EspAINames, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Health" IsChecked="{Binding EspAIHealth, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Distance" IsChecked="{Binding EspAIDistance, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Weapons" IsChecked="{Binding EspAIWeapons, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Head Circle" IsChecked="{Binding EspHeadCircleAI, Mode=TwoWay}" Margin="0,0,16,8" ToolTip="Head circles inherit the entity color" />
                     </WrapPanel>
                    <WrapPanel Margin="0,8,0,0">
                        <TextBlock Text="Label Position (AI/Scav):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox Width="140"
                                  ItemsSource="{Binding LabelPositions}"
                                  SelectedItem="{Binding EspLabelPositionAI, Mode=TwoWay}"
                                  ToolTip="Choose where the AI/scav label is drawn relative to the bounding box."/>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="AI/Scav:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <controls:NeonColorSwatch
                                              SelectedColor="{Binding EspColorAI, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Player Scav:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <controls:NeonColorSwatch
                                              SelectedColor="{Binding EspColorPlayerScavs, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Raider:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <controls:NeonColorSwatch
                                              SelectedColor="{Binding EspColorRaiders, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Boss:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <controls:NeonColorSwatch
                                              SelectedColor="{Binding EspColorBosses, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"/>
                        </StackPanel>
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="Max Distance (0 = Unlimited):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="AIDistanceSlider"
                                Width="300"
                                Margin="0,0,8,0"
                                Minimum="0"
                                Maximum="1000"
                                SmallChange="10"
                                LargeChange="100"
                                Value="{Binding EspAIMaxDistance, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=AIDistanceSlider, StringFormat='{}{0:F0}m'}"
                                   VerticalAlignment="Center"
                                   MinWidth="50"/>
                     </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- Loot, Exfils & Explosives card -->
            <GroupBox Header="Loot, Exfils &amp; Explosives" Margin="0,0,0,8">
                <StackPanel>
                     <WrapPanel>
                        <CheckBox Content="Show Loot" IsChecked="{Binding EspLoot, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Prices" IsChecked="{Binding EspLootPrice, Mode=TwoWay}" Margin="0,0,16,8" IsEnabled="{Binding EspLoot}" />
                        <CheckBox Content="Show Exfils" IsChecked="{Binding EspExfils, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Tripwires" IsChecked="{Binding EspTripwires, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Grenades" IsChecked="{Binding EspGrenades, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Loot Cone Filter"
                                  IsChecked="{Binding EspLootConeEnabled, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0" Visibility="{Binding EspGrenades, Converter={StaticResource BoolToVis}}">
                        <CheckBox Content="Show Grenade Trail"
                                  IsChecked="{Binding EspGrenadeTrail, Mode=TwoWay}"
                                  Margin="0,0,16,0" />
                        <TextBlock Text="Trail Length:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0" />
                        <Slider x:Name="EspGrenadeTrailLengthSlider"
                                Width="120"
                                Margin="8,0"
                                Minimum="10"
                                Maximum="200"
                                SmallChange="5"
                                LargeChange="20"
                                Value="{Binding EspGrenadeTrailLength, Mode=TwoWay}"
                                IsEnabled="{Binding EspGrenadeTrail}" />
                        <TextBlock Text="{Binding Value, ElementName=EspGrenadeTrailLengthSlider, StringFormat='{}{0:F0}'}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0" />
                        <CheckBox Content="Show Blast Radius"
                                  IsChecked="{Binding EspGrenadeBlastRadius, Mode=TwoWay}"
                                  Margin="16,0,0,0" />
                     </WrapPanel>
                     <WrapPanel Margin="0,4,0,0">
                        <CheckBox Content="Show Food" IsChecked="{Binding EspFood, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Meds" IsChecked="{Binding EspMeds, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Backpacks" IsChecked="{Binding EspBackpacks, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Quest Items" IsChecked="{Binding EspQuestLoot, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Quest Zones" IsChecked="{Binding EspQuestLocations, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Corpses" IsChecked="{Binding EspCorpses, Mode=TwoWay}" Margin="0,0,16,8" />
                        <CheckBox Content="Show Containers" IsChecked="{Binding EspContainers, Mode=TwoWay}" Margin="0,0,16,8" />
                     </WrapPanel>
                     <StackPanel Visibility="{Binding EspContainers, Converter={StaticResource BoolToVis}}">
                         <WrapPanel Margin="0,4,0,0">
                            <TextBlock Text="Container Draw Distance"
                                       VerticalAlignment="Center" />
                            <Slider x:Name="EspContainerDistanceSlider"
                                    Width="150"
                                    Margin="8,0"
                                    Minimum="0"
                                    Maximum="1000"
                                    SmallChange="10"
                                    LargeChange="100"
                                    Value="{Binding EspContainerDistance, Mode=TwoWay}" />
                            <TextBlock Text="{Binding Value, ElementName=EspContainerDistanceSlider, StringFormat='{}{0:F0}'}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                         </WrapPanel>
                         <WrapPanel Margin="0,4,0,0">
                            <TextBlock Text="Min Value (0=All)"
                                       VerticalAlignment="Center" />
                            <Slider x:Name="EspContainerMinValueSlider"
                                    Width="150"
                                    Margin="8,0"
                                    Minimum="0"
                                    Maximum="500000"
                                    SmallChange="10000"
                                    LargeChange="50000"
                                    Value="{Binding EspContainerMinValue, Mode=TwoWay}" />
                            <TextBlock Text="{Binding Value, ElementName=EspContainerMinValueSlider, StringFormat='{}{0:N0}'}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                         </WrapPanel>
                     </StackPanel>
                     <WrapPanel Margin="0,4,0,0" Visibility="{Binding EspLootConeEnabled, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="Cone Angle"
                                   VerticalAlignment="Center" />
                        <Slider x:Name="LootConeSlider"
                                Width="150"
                                Margin="8,0"
                                Minimum="5"
                                Maximum="60"
                                SmallChange="1"
                                LargeChange="5"
                                Value="{Binding EspLootConeAngle, Mode=TwoWay}" />
                        <TextBlock Text="{Binding Value, ElementName=LootConeSlider, StringFormat=F0}"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0" />
                     </WrapPanel>
                    <WrapPanel Margin="0,4,0,0">
                        <TextBlock Text="Loot Draw Distance (0 = Unlimited):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="LootDistanceSlider"
                                Width="200"
                                Margin="0,0,8,0"
                                Minimum="0"
                                Maximum="500"
                                SmallChange="10"
                                LargeChange="50"
                                Value="{Binding EspLootMaxDistance, Mode=TwoWay}"/>
                        <TextBlock Text="{Binding Value, ElementName=LootDistanceSlider, StringFormat='{}{0:F0}m'}"
                                   VerticalAlignment="Center"
                                   MinWidth="50"/>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Loot:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <controls:NeonColorSwatch
                                              SelectedColor="{Binding EspColorLoot, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Container:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <controls:NeonColorSwatch
                                              SelectedColor="{Binding EspColorContainers, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Exfil:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <controls:NeonColorSwatch
                                              SelectedColor="{Binding EspColorExfil, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Tripwire:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <controls:NeonColorSwatch
                                              SelectedColor="{Binding EspColorTripwire, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="16,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Grenade:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <controls:NeonColorSwatch
                                              SelectedColor="{Binding EspColorGrenade, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- Mini Radar card -->
            <GroupBox Header="Mini Radar" Margin="0,0,0,8">
                <StackPanel>
                    <CheckBox Content="Enable Mini Radar" IsChecked="{Binding MiniRadarEnabled, Mode=TwoWay}" Margin="0,0,0,8"/>

                    <StackPanel Visibility="{Binding MiniRadarEnabled, Converter={StaticResource BoolToVis}}">
                        <WrapPanel Margin="0,0,0,8">
                             <TextBlock Text="Size:" VerticalAlignment="Center" Width="60"/>
                             <Slider Width="150" Minimum="150" Maximum="512" Value="{Binding MiniRadarSize, Mode=TwoWay}" SmallChange="10" LargeChange="50"/>
                             <TextBlock Text="{Binding MiniRadarSize, StringFormat='{}{0} px'}" VerticalAlignment="Center" Margin="8,0,0,0"/>
                        </WrapPanel>

                        <WrapPanel Margin="0,0,0,8">
                            <TextBlock Text="Position:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="X" VerticalAlignment="Center" Margin="0,0,4,0"/>
                            <TextBox Width="50" Text="{Binding MiniRadarScreenX, Mode=TwoWay}" ToolTip="-1 = Auto (Right)"/>
                            <TextBlock Text="Y" VerticalAlignment="Center" Margin="8,0,4,0"/>
                            <TextBox Width="50" Text="{Binding MiniRadarScreenY, Mode=TwoWay}"/>
                        </WrapPanel>

                        <TextBlock Text="Visibility Layers" FontWeight="SemiBold" Margin="0,4,0,4"/>
                        <WrapPanel>
                             <CheckBox Content="Players" IsChecked="{Binding MiniRadarShowPlayers, Mode=TwoWay}" Margin="0,0,12,0"/>
                             <CheckBox Content="Loot" IsChecked="{Binding MiniRadarShowLoot, Mode=TwoWay}" Margin="0,0,12,0"/>
                             <CheckBox Content="Containers" IsChecked="{Binding MiniRadarShowContainers, Mode=TwoWay}" Margin="0,0,12,0"/>
                             <CheckBox Content="Exits" IsChecked="{Binding MiniRadarShowExits, Mode=TwoWay}" Margin="0,0,12,0"/>
                             <CheckBox Content="Grenades" IsChecked="{Binding MiniRadarShowGrenades, Mode=TwoWay}" Margin="0,0,12,0"/>
                        </WrapPanel>
                        <CheckBox Content="Invert Map Colors (Dark)" IsChecked="{Binding MiniRadarInvertColors, Mode=TwoWay}" Margin="0,8,0,0"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!-- Ammo Counter card -->
            <GroupBox Header="Ammo Counter" Margin="0,0,0,8">
                <StackPanel>
                    <WrapPanel>
                        <CheckBox Content="Enable Ammo Counter" IsChecked="{Binding AmmoCounterEnabled, Mode=TwoWay}" Margin="0,0,16,8"
                                  ToolTip="Displays ammo count on ESP. Drag to reposition, drag corner to resize. Shows ammo type below count."/>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="Text Color:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <controls:NeonColorSwatch
                                              SelectedColor="{Binding AmmoCounterTextColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"/>
                        </StackPanel>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>

            <!-- Misc card -->
            <GroupBox Header="Misc" Margin="0,0,0,8">
                <StackPanel>
                    <StackPanel Margin="0,0,0,8">
                        <TextBlock Text="ESP Max FPS (0 = Unlimited)"
                                   VerticalAlignment="Center" />
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <Slider x:Name="EspFpsSlider"
                                    Width="220"
                                    Minimum="0"
                                    Maximum="360"
                                    SmallChange="10"
                                    LargeChange="30"
                                    TickFrequency="30"
                                    IsSnapToTickEnabled="True"
                                    Value="{Binding EspMaxFPS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    ToolTip="Defaults to 144. Lower values save CPU/GPU." />
                            <TextBlock Text="{Binding Value, ElementName=EspFpsSlider, StringFormat='{}{0:F0}'}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0" />
                        </StackPanel>
                    </StackPanel>

                    <CheckBox Content="Crosshair"
                                  ToolTip="Displays a simple crosshair at the center of the ESP window."
                                  IsChecked="{Binding EspCrosshair, Mode=TwoWay}"
                                  Margin="0,0,16,8" />

                    <StackPanel Visibility="{Binding EspCrosshair, Converter={StaticResource BoolToVis}}">
                        <WrapPanel Margin="0,4,0,0">
                            <TextBlock Text="Crosshair Length" VerticalAlignment="Center"/>
                            <Slider x:Name="CrosshairLengthSlider"
                                    Width="150"
                                    Margin="8,0"
                                    Minimum="5"
                                    Maximum="100"
                                    SmallChange="1"
                                    LargeChange="5"
                                    Value="{Binding EspCrosshairLength, Mode=TwoWay}"/>
                            <TextBlock Text="{Binding Value, ElementName=CrosshairLengthSlider, StringFormat=F0}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </WrapPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Crosshair Color:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <controls:NeonColorSwatch
                                                  SelectedColor="{Binding EspColorCrosshair, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
