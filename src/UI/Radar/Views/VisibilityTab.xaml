<UserControl x:Class="LoneEftDmaRadar.UI.Radar.Views.VisibilityTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:LoneEftDmaRadar.UI.Misc"
             xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Radar.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:controls="clr-namespace:LoneEftDmaRadar.UI.Controls"
             mc:Ignorable="d"
             Padding="10">

    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:VisibilityViewModel}"
                          IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>

    <UserControl.Resources>
        <conv:StringToColorConverter x:Key="StringToColorConverter" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical"
                    Margin="0,0,0,10">

            <TextBlock Text="Visibility / LOS"
                       FontSize="16"
                       Margin="0,0,0,8" />

            <!-- Enable/Disable -->
            <CheckBox Content="Enable Visibility System"
                      IsChecked="{Binding Enabled, Mode=TwoWay}"
                      Margin="0,4"
                      ToolTip="Enable local mesh-based line-of-sight raycasting" />

            <!-- Mesh Status -->
            <GroupBox Header="Mesh Status"
                      Margin="0,0,0,8">
                <StackPanel Margin="6">
                    <TextBlock Text="{Binding MeshStatusText}"
                               FontFamily="Consolas"
                               TextWrapping="Wrap" />
                    <TextBlock Text="{Binding WorkerStatusText}"
                               FontFamily="Consolas"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0" />
                    <TextBlock Text="{Binding AvailableMapsText}"
                               FontFamily="Consolas"
                               TextWrapping="Wrap"
                               Margin="0,4,0,0"
                               Foreground="{DynamicResource App.TextMutedBrush}" />
                </StackPanel>
            </GroupBox>

            <!-- Raycast Options -->
            <GroupBox Header="Raycast Options"
                      Margin="0,0,0,8">
                <StackPanel Margin="6">
                    <CheckBox Content="Dual-Check (Eye + Ballistic)"
                              IsChecked="{Binding DualCheck, Mode=TwoWay}"
                              Margin="0,4"
                              ToolTip="Check both eye LOS and ballistic LOS per bone" />
                    <CheckBox Content="No Foliage (eye LOS ignores trees/bushes)"
                              IsChecked="{Binding NoFoliage, Mode=TwoWay}"
                              Margin="0,4"
                              ToolTip="Use ballistic mesh for eye LOS (ignores foliage)" />
                </StackPanel>
            </GroupBox>

            <!-- ESP Coloring -->
            <GroupBox Header="ESP Coloring"
                      Margin="0,0,0,8">
                <StackPanel Margin="6">
                    <CheckBox Content="Per-Bone Skeleton Coloring"
                              IsChecked="{Binding PerBoneColoring, Mode=TwoWay}"
                              Margin="0,4"
                              ToolTip="Color each skeleton segment based on individual bone visibility" />

                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Visible:" VerticalAlignment="Center" Margin="0,0,6,0"
                                   ToolTip="Eye LOS clear" />
                        <controls:NeonColorSwatch
                                          SelectedColor="{Binding VisibleColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,6,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Hitscan-Only:" VerticalAlignment="Center" Margin="0,0,6,0"
                                   ToolTip="Ballistic LOS clear, eye blocked" />
                        <controls:NeonColorSwatch
                                          SelectedColor="{Binding HitscanOnlyColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}" />
                    </StackPanel>

                    <TextBlock Text="Not visible = default faction color"
                               Margin="0,8,0,0"
                               Foreground="{DynamicResource App.TextMutedBrush}"
                               FontSize="11" />
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
