<UserControl x:Class="LoneEftDmaRadar.UI.Radar.Views.ActiveQuestsTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Radar.ViewModels"
             mc:Ignorable="d"
             Padding="10">

    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:ActiveQuestsViewModel}"
                          IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Margin="0,0,0,10">

            <!-- General card -->
            <GroupBox Header="General" Margin="0,0,0,8">
                <StackPanel>
                    <CheckBox Content="Enable Quest Helper"
                              ToolTip="Enables quest tracking from game memory. Tracks your active quests and objectives."
                              IsChecked="{Binding QuestHelperEnabled, Mode=TwoWay}"
                              FontWeight="SemiBold"
                              Margin="0,0,0,4" />
                    <CheckBox Content="Show Quest Locations"
                              ToolTip="Shows quest objective locations on the radar map (cyan markers)."
                              IsChecked="{Binding QuestHelperShowLocations, Mode=TwoWay}"
                              IsEnabled="{Binding QuestHelperEnabled}"
                              Margin="0,0,0,4" />
                    <CheckBox Content="Highlight Quest Items"
                              ToolTip="Highlights loot items that are needed for your active quests."
                              IsChecked="{Binding ShowQuestItems, Mode=TwoWay}"
                              IsEnabled="{Binding QuestHelperEnabled}" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Active Quests"
                      Margin="0,0,0,8">
                <StackPanel>
                    <TextBlock Text="Toggle quests on/off. Disabled quests won't show objectives on the radar."
                               Margin="0,0,0,8"
                               FontStyle="Italic" />

                    <Button Content="Refresh Quest List"
                            Click="RefreshButton_Click"
                            Padding="6,2"
                            Margin="0,0,0,8"
                            HorizontalAlignment="Left" />

                    <TextBlock Margin="0,0,0,8">
                        <Run Text="Active Quests: " />
                        <Run Text="{Binding ActiveQuestCount, Mode=OneWay}"
                             FontWeight="Bold"
                             Foreground="Orange" />
                    </TextBlock>

                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  MaxHeight="400">
                        <ListBox ItemsSource="{Binding ActiveQuests}"
                                 Background="Transparent"
                                 ScrollViewer.CanContentScroll="True">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel IsVirtualizing="True"
                                                            VirtualizationMode="Recycling" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                                  ToolTip="Uncheck to hide quest objectives on radar"
                                                  VerticalAlignment="Center"
                                                  Margin="0,0,6,0" />
                                        <TextBlock VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsEnabled}" Value="False">
                                                            <Setter Property="Opacity" Value="0.5" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                            <Run Text="{Binding DisplayName, Mode=OneWay}"
                                                 FontWeight="SemiBold" />
                                            <Run Text=" " />
                                            <Run Text="{Binding Badges, Mode=OneWay}"
                                                 Foreground="Orange"
                                                 FontWeight="Bold" />
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </ScrollViewer>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
