<UserControl x:Class="LoneEftDmaRadar.UI.Radar.Views.HideoutTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Radar.ViewModels"
             mc:Ignorable="d"
             Padding="10">

    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:HideoutViewModel}"
                          IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical"
                    Margin="0,0,0,10">

            <GroupBox Header="Hideout Item Tracking"
                      Margin="0,0,0,12">
                <StackPanel>
                    <WrapPanel Margin="0,0,0,8">
                        <CheckBox Content="Enable Hideout Tracking"
                                  ToolTip="Highlights loot items needed for selected hideout upgrades."
                                  IsChecked="{Binding Enabled, Mode=TwoWay}"
                                  Margin="0,0,16,8" />
                        <CheckBox Content="Show on Map/ESP"
                                  ToolTip="Display hideout items on radar and ESP."
                                  IsChecked="{Binding ShowHideoutItems, Mode=TwoWay}"
                                  IsEnabled="{Binding Enabled}"
                                  Margin="0,0,16,8" />
                    </WrapPanel>

                    <TextBlock Text="Select hideout stations and levels to track:"
                               Margin="0,0,0,8"
                               FontStyle="Italic" />

                    <!-- Horizontal station/level layout -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  MaxHeight="350"
                                  IsEnabled="{Binding Enabled}">
                        <ItemsControl ItemsSource="{Binding Stations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#444"
                                            BorderThickness="0,0,0,1"
                                            Padding="0,4"
                                            Margin="0,0,0,2">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="140" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <!-- Station Name -->
                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding Name}"
                                                       FontWeight="SemiBold"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,8,0" />

                                            <!-- Level Toggles -->
                                            <ItemsControl Grid.Column="1"
                                                          ItemsSource="{Binding Levels}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <ToggleButton IsChecked="{Binding IsTracked, Mode=TwoWay}"
                                                                      MinWidth="32"
                                                                      Height="24"
                                                                      Margin="0,0,4,0"
                                                                      Padding="6,2"
                                                                      ToolTip="{Binding ItemSummary}">
                                                            <ToggleButton.Style>
                                                                <Style TargetType="ToggleButton">
                                                                    <Setter Property="Background" Value="#333" />
                                                                    <Setter Property="Foreground" Value="White" />
                                                                    <Setter Property="BorderBrush" Value="#555" />
                                                                    <Style.Triggers>
                                                                        <Trigger Property="IsChecked" Value="True">
                                                                            <Setter Property="Background" Value="#1E6B1E" />
                                                                            <Setter Property="BorderBrush" Value="#2A8B2A" />
                                                                        </Trigger>
                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                            <Setter Property="BorderBrush" Value="Orange" />
                                                                        </Trigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </ToggleButton.Style>
                                                            <TextBlock Text="{Binding Level}"
                                                                       FontWeight="Bold"
                                                                       FontSize="11" />
                                                        </ToggleButton>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Currently Tracking"
                      Margin="0,0,0,12"
                      IsEnabled="{Binding Enabled}">
                <StackPanel>
                    <TextBlock Margin="0,0,0,8">
                        <Run Text="Items: " />
                        <Run Text="{Binding TrackedItemCount, Mode=OneWay}"
                             FontWeight="Bold"
                             Foreground="Orange" />
                    </TextBlock>
                    <ListBox ItemsSource="{Binding TrackedItems}"
                             Height="150"
                             ScrollViewer.CanContentScroll="True"
                             Background="Transparent">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel IsVirtualizing="True"
                                                        VirtualizationMode="Recycling" />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding IsFound, Mode=TwoWay}"
                                              ToolTip="Mark as found (excludes from radar/ESP)"
                                              VerticalAlignment="Center"
                                              Margin="0,0,6,0" />
                                    <TextBlock VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsFound}" Value="True">
                                                        <Setter Property="TextDecorations" Value="Strikethrough" />
                                                        <Setter Property="Opacity" Value="0.5" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                        <Run Text="{Binding ItemName, Mode=OneWay}"
                                             FontWeight="Bold" />
                                        <Run Text=" x" />
                                        <Run Text="{Binding CountRequired, Mode=OneWay}" />
                                        <Run Text=" for " />
                                        <Run Text="{Binding StationName, Mode=OneWay}"
                                             Foreground="Orange" />
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
