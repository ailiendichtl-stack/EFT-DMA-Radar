<Window x:Class="LoneEftDmaRadar.UI.Misc.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Misc"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Loading…"
        Width="700" Height="180"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Background="#0D0D0D"
        AllowsTransparency="True"
        Icon="/lone-icon.ico">

    <!-- design-time only -->
    <d:Window.DataContext>
        <d:DesignInstance Type="{x:Type vm:LoadingViewModel}"
                          IsDesignTimeCreatable="False"/>
    </d:Window.DataContext>

    <Grid Margin="8">
        <!-- Glow layer (no text — ClearType safe) -->
        <Border CornerRadius="8"
                BorderBrush="#409945FF"
                BorderThickness="0.8"
                Background="Transparent">
            <Border.Effect>
                <DropShadowEffect Color="#9945FF"
                                  BlurRadius="16"
                                  ShadowDepth="0"
                                  Opacity="0.30"/>
            </Border.Effect>
        </Border>

        <!-- Content layer -->
        <Border CornerRadius="8"
                Padding="40,30"
                BorderThickness="0.8">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F0101018" Offset="0"/>
                    <GradientStop Color="#F0141422" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#309945FF" Offset="0"/>
                    <GradientStop Color="#20E63366" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="{Binding StatusText}"
                           FontSize="22"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource App.TextPrimaryBrush}"
                           Margin="0,0,0,16"
                           TextAlignment="Center"/>
                <ProgressBar Minimum="0"
                             Maximum="100"
                             Value="{Binding Progress}"
                             Height="8"
                             Width="500"/>
                <TextBlock Text="{Binding Progress, StringFormat={}{0:F0}%}"
                           FontSize="11"
                           Foreground="{DynamicResource App.TextTertiaryBrush}"
                           Margin="0,8,0,0"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
