                                        CornerRadius="3"
                                        Margin="1"
                                        HorizontalAlignment="Left">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#3B82F6" Offset="0"/>
                                            <GradientStop Color="#9945FF" Offset="0.5"/>
                                            <GradientStop Color="#E63366" Offset="1"/>
                                        </LinearGradientBrush>
