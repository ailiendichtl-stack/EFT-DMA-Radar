            <Style TargetType="DataGridCell">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="8,3" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter VerticalAlignment="Center" />
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#1F2430" />
                        <Setter Property="Foreground" Value="{DynamicResource App.TextPrimaryBrush}" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="DataGridRow">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="#1F2430" />
                    </Trigger>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#1A9945FF" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- ListBox -->
            <Style TargetType="ListBox">
                <Setter Property="Background" Value="{DynamicResource App.CardBrush}" />
                <Setter Property="Foreground" Value="{DynamicResource App.TextPrimaryBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}" />
                <Setter Property="BorderThickness" Value="0.5" />
                <Setter Property="Padding" Value="2" />
            </Style>

            <Style TargetType="ListBoxItem">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Foreground" Value="{DynamicResource App.TextPrimaryBrush}" />
                <Setter Property="Padding" Value="6,3" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border x:Name="Bd"
                                    Padding="{TemplateBinding Padding}"
                                    CornerRadius="3">
                                <Border.Background>
                                    <SolidColorBrush x:Name="LbiBg" Color="#00000000"/>
                                </Border.Background>
                                <ContentPresenter />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="LbiBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#181B22" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="LbiBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#00000000" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="LbiBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#1F2430" Duration="0:0:0.01"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="LbiBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#00000000" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Slider chrome -->
            <Style x:Key="SliderTrackButtonStyle" TargetType="RepeatButton">
                <Setter Property="Background" Value="#1A9945FF"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="IsTabStop" Value="False"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RepeatButton">
                            <Rectangle Fill="{TemplateBinding Background}" Height="2" RadiusX="1" RadiusY="1"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SliderFilledTrackStyle" TargetType="RepeatButton">
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="IsTabStop" Value="False"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RepeatButton">
                            <Rectangle Height="2" RadiusX="1" RadiusY="1">
                                <Rectangle.Fill>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#3B82F6" Offset="0"/>
                                        <GradientStop Color="#9945FF" Offset="0.5"/>
                                        <GradientStop Color="#E63366" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SliderThumbStyle" TargetType="Thumb">
                <Setter Property="Width" Value="14"/>
                <Setter Property="Height" Value="14"/>
                <Setter Property="Background" Value="{DynamicResource App.AccentBrush}"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Thumb">
                            <Grid>
                                <!-- Glow ring -->
                                <Border x:Name="GlowRing"
                                        CornerRadius="7"
                                        BorderBrush="#409945FF"
                                        BorderThickness="1.5"
                                        Background="Transparent"
                                        Opacity="0"/>
                                <!-- Solid thumb -->
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="7"
                                        Margin="2"/>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="GlowRing" Property="Opacity" Value="1"/>
                                </Trigger>
                                <Trigger Property="IsDragging" Value="True">
                                    <Setter TargetName="GlowRing" Property="Opacity" Value="1"/>
                                    <Setter TargetName="GlowRing" Property="BorderBrush" Value="#669945FF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="Slider">
                <Setter Property="Foreground" Value="{DynamicResource App.AccentBrush}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Slider">
                            <Grid Margin="6,0">
                                <!-- Track glow layer (behind the track) -->
                                <Border x:Name="TrackGlow"
                                        VerticalAlignment="Center"
                                        Height="2" CornerRadius="1"
                                        Background="Transparent"
                                        Opacity="0.5">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#9945FF"
                                                          BlurRadius="8"
                                                          ShadowDepth="0"
                                                          Opacity="0.35"/>
                                    </Border.Effect>
                                </Border>
                                <Track x:Name="PART_Track"
                                       VerticalAlignment="Center"
                                       Maximum="{TemplateBinding Maximum}"
                                       Minimum="{TemplateBinding Minimum}"
                                       Value="{TemplateBinding Value}"
                                       IsDirectionReversed="{TemplateBinding IsDirectionReversed}"
                                       Orientation="{TemplateBinding Orientation}">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Style="{StaticResource SliderFilledTrackStyle}" />
                                    </Track.DecreaseRepeatButton>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Style="{StaticResource SliderTrackButtonStyle}" />
                                    </Track.IncreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource SliderThumbStyle}" />
                                    </Track.Thumb>
                                </Track>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="xctk:ColorPicker">
                <Setter Property="Background" Value="#14171D"/>
                <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
                <Setter Property="BorderThickness" Value="0.5"/>
                <Setter Property="Foreground" Value="{DynamicResource App.TextPrimaryBrush}"/>
                <Setter Property="Padding" Value="4"/>
                <Setter Property="ColorMode" Value="ColorCanvas"/>
                <Setter Property="ShowAvailableColors" Value="False"/>
                <Setter Property="ShowStandardColors" Value="False"/>
                <Setter Property="ShowRecentColors" Value="False"/>
                <Setter Property="UsingAlphaChannel" Value="True"/>
                <Setter Property="DropDownBackground" Value="#0F1115"/>
                <Setter Property="DropDownBorderBrush" Value="{DynamicResource App.BorderBrush}"/>
                <Setter Property="DropDownBorderThickness" Value="0.5"/>
                <Setter Property="HeaderBackground" Value="#181C22"/>
                <Setter Property="HeaderForeground" Value="{DynamicResource App.TextPrimaryBrush}"/>
                <Setter Property="TabBackground" Value="#14171D"/>
                <Setter Property="TabForeground" Value="{DynamicResource App.TextPrimaryBrush}"/>
            </Style>

            <!-- NeonColorSwatch: Cyberpunk neon gem color swatches (22px) -->
            <Style TargetType="controls:NeonColorSwatch">
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Width" Value="22"/>
                <Setter Property="Height" Value="22"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="controls:NeonColorSwatch">
                            <Grid RenderTransformOrigin="0.5,0.5">
                                <Grid.RenderTransform>
                                    <ScaleTransform x:Name="SwatchScale" ScaleX="1" ScaleY="1"/>
                                </Grid.RenderTransform>

                                <!-- Outer glow border (no Effect — avoids ScrollViewer clip crash) -->
                                <Border x:Name="GlowBorder"
                                        Width="22" Height="22"
                                        CornerRadius="11"
                                        BorderThickness="0.8"
                                        BorderBrush="{DynamicResource Neon.TriGradientBrush}"
                                        Background="{DynamicResource Glass.SurfaceBrush}">

                                    <!-- Inner color circle -->
                                    <Border x:Name="ColorFill"
                                            CornerRadius="9"
                                            Margin="1.5">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding SelectedColor,
                                                RelativeSource={RelativeSource TemplatedParent},
                                                TargetNullValue=Transparent}"/>
                                        </Border.Background>

                                        <!-- Glass sparkle highlight -->
                                        <Ellipse x:Name="Sparkle"
                                                 Width="7" Height="5"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 Margin="3,2,0,0"
                                                 Opacity="0.15"
                                                 IsHitTestVisible="False">
                                            <Ellipse.Fill>
                                                <RadialGradientBrush>
                                                    <GradientStop Color="#60FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#00FFFFFF" Offset="1"/>
                                                </RadialGradientBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                    </Border>
                                </Border>

                                <!-- Color canvas popup (separate window — Effect safe here) -->
                                <Popup x:Name="PART_Popup"
                                       StaysOpen="True"
                                       AllowsTransparency="True"
                                       Placement="Bottom"
                                       VerticalOffset="4"
                                       IsOpen="{Binding IsDropDownOpen,
                                           RelativeSource={RelativeSource TemplatedParent},
                                           Mode=TwoWay}">
                                    <Border Background="#F0101018"
                                            BorderBrush="{DynamicResource Neon.TriGradientBrush}"
                                            BorderThickness="0.8"
                                            CornerRadius="8"
                                            Padding="10"
                                            Margin="4">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="0"
                                                              BlurRadius="12"
                                                              Color="#9945FF"
                                                              Opacity="0.3"/>
                                        </Border.Effect>
                                        <xctk:ColorCanvas
                                            SelectedColor="{Binding SelectedColor,
                                                RelativeSource={RelativeSource TemplatedParent},
                                                Mode=TwoWay}"
                                            UsingAlphaChannel="{Binding UsingAlphaChannel,
                                                RelativeSource={RelativeSource TemplatedParent}}"
                                            Background="Transparent"
                                            Width="220" Height="200"/>
                                    </Border>
                                </Popup>
                            </Grid>

                            <ControlTemplate.Triggers>
                                <!-- Hover: scale up -->
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="SwatchScale"
                                                                 Storyboard.TargetProperty="ScaleX"
                                                                 To="1.15" Duration="0:0:0.12"/>
                                                <DoubleAnimation Storyboard.TargetName="SwatchScale"
                                                                 Storyboard.TargetProperty="ScaleY"
                                                                 To="1.15" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="SwatchScale"
                                                                 Storyboard.TargetProperty="ScaleX"
                                                                 To="1.0" Duration="0:0:0.12"/>
                                                <DoubleAnimation Storyboard.TargetName="SwatchScale"
                                                                 Storyboard.TargetProperty="ScaleY"
                                                                 To="1.0" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>

                                <!-- Active: pink outline + sparkle -->
                                <Trigger Property="IsDropDownOpen" Value="True">
                                    <Setter TargetName="GlowBorder" Property="BorderThickness" Value="1.5"/>
                                    <Setter TargetName="GlowBorder" Property="BorderBrush"
                                            Value="{DynamicResource Neon.PinkBrush}"/>
                                    <Setter TargetName="Sparkle" Property="Opacity" Value="0.45"/>
                                </Trigger>

                                <!-- Disabled -->
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.4"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Scrollbar: ultra-thin, rounded, modern -->
            <Style x:Key="ScrollBarThumbStyle" TargetType="Thumb">
                <Setter Property="IsTabStop" Value="False"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Thumb">
                            <Border x:Name="ThumbBd"
                                    CornerRadius="1"
                                    Margin="1">
                                <Border.Background>
                                    <SolidColorBrush x:Name="ThumbBg" Color="#333333"/>
                                </Border.Background>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ThumbBd" Property="Background" Value="#9945FF"/>
                                </Trigger>
                                <Trigger Property="IsDragging" Value="True">
                                    <Setter TargetName="ThumbBd" Property="Background" Value="#9945FF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="ScrollBarPageButton" TargetType="RepeatButton">
                <Setter Property="IsTabStop" Value="False"/>
                <Setter Property="Focusable" Value="False"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RepeatButton">
                            <Border Background="Transparent"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="ScrollBar">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Width" Value="4"/>
                <Setter Property="MinWidth" Value="4"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ScrollBar">
                            <Grid>
                                <Track x:Name="PART_Track"
                                       IsDirectionReversed="True">
                                    <Track.DecreaseRepeatButton>
                                        <RepeatButton Style="{StaticResource ScrollBarPageButton}" Command="ScrollBar.PageUpCommand"/>
                                    </Track.DecreaseRepeatButton>
                                    <Track.Thumb>
                                        <Thumb Style="{StaticResource ScrollBarThumbStyle}"/>
                                    </Track.Thumb>
                                    <Track.IncreaseRepeatButton>
                                        <RepeatButton Style="{StaticResource ScrollBarPageButton}" Command="ScrollBar.PageDownCommand"/>
                                    </Track.IncreaseRepeatButton>
                                </Track>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="Orientation" Value="Horizontal">
                        <Setter Property="Width" Value="Auto"/>
                        <Setter Property="Height" Value="4"/>
                        <Setter Property="MinHeight" Value="4"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ScrollBar">
                                    <Grid>
                                        <Track x:Name="PART_Track"
                                               IsDirectionReversed="False">
                                            <Track.DecreaseRepeatButton>
                                                <RepeatButton Style="{StaticResource ScrollBarPageButton}" Command="ScrollBar.PageLeftCommand"/>
                                            </Track.DecreaseRepeatButton>
                                            <Track.Thumb>
                                                <Thumb Style="{StaticResource ScrollBarThumbStyle}"/>
                                            </Track.Thumb>
                                            <Track.IncreaseRepeatButton>
                                                <RepeatButton Style="{StaticResource ScrollBarPageButton}" Command="ScrollBar.PageRightCommand"/>
                                            </Track.IncreaseRepeatButton>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Sidebar Button Style -->
            <Style x:Key="SidebarButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource App.TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="10,7"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="Margin" Value="0,0"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- Left accent bar (visible when panel is open) -->
                                <Rectangle x:Name="AccentBar"
                                           Width="2" Height="14"
                                           RadiusX="1" RadiusY="1"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center"
                                           Fill="{DynamicResource App.AccentGradientBrush}"
                                           Visibility="{Binding Tag, RelativeSource={RelativeSource AncestorType=Button}, Converter={StaticResource BoolToVis}}"/>
                                <Border x:Name="Bd"
                                        CornerRadius="5"
                                        Margin="5,0,0,0"
                                        Padding="{TemplateBinding Padding}">
                                    <Border.Background>
                                        <SolidColorBrush x:Name="BdBg" Color="#009945FF"/>
                                    </Border.Background>
                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BdBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#1A9945FF" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BdBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#009945FF" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="#289945FF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="True">
                        <Setter Property="Foreground" Value="{DynamicResource App.AccentBrush}"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <!-- Sidebar Group Header Style -->
            <Style x:Key="SidebarGroupHeader" TargetType="TextBlock">
                <Setter Property="FontSize" Value="10"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource Neon.PinkBrush}"/>
                <Setter Property="Margin" Value="8,14,0,6"/>
            </Style>

            <!-- Panel Close Button Style -->
            <Style x:Key="PanelCloseButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource App.TextMutedBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Focusable" Value="False"/>
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bd"
                                    CornerRadius="3"
                                    Width="{TemplateBinding Width}"
                                    Height="{TemplateBinding Height}">
                                <Border.Background>
                                    <SolidColorBrush x:Name="BdBg" Color="#009945FF"/>
                                </Border.Background>
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BdBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#339945FF" Duration="0:0:0.1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BdBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#009945FF" Duration="0:0:0.1"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                    <Setter Property="Foreground" Value="{DynamicResource App.AccentBrush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="#409945FF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Overlay Toggle Button Style (for Map Free, Loot buttons) -->
            <Style x:Key="OverlayToggleButton" TargetType="ToggleButton">
                <Setter Property="Foreground" Value="{DynamicResource App.TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}"/>
                <Setter Property="BorderThickness" Value="0.5"/>
                <Setter Property="Padding" Value="8,5"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToggleButton">
                            <Border x:Name="Bd"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Background>
                                    <SolidColorBrush x:Name="BdBg" Color="#161616"/>
                                </Border.Background>
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BdBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#1A9945FF" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BdBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#161616" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#309945FF"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="#289945FF"/>
                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#409945FF"/>
                                    <Setter Property="Foreground" Value="{DynamicResource App.AccentBrush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="#409945FF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
