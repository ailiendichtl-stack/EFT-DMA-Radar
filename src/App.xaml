<Application x:Class="LoneEftDmaRadar.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LoneEftDmaRadar"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:converters="clr-namespace:LoneEftDmaRadar.UI.Converters"
             xmlns:controls="clr-namespace:LoneEftDmaRadar.UI.Controls"
             ThemeMode="Dark"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/PresentationFramework.Fluent;component/Themes/Fluent.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters (must be before any styles that reference them) -->
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="BoolToVisInverted"/>

            <!-- Premium Deep Palette -->
            <SolidColorBrush x:Key="App.BackgroundBrush" Color="#0D0D0D"/>
            <SolidColorBrush x:Key="App.SurfaceBrush" Color="#161616"/>
            <SolidColorBrush x:Key="App.CardBrush" Color="#1A1A1A"/>
            <SolidColorBrush x:Key="App.ElevatedBrush" Color="#242424"/>
            <SolidColorBrush x:Key="App.BorderBrush" Color="#222222"/>
            <SolidColorBrush x:Key="App.AccentBrush" Color="#9945FF"/>
            <SolidColorBrush x:Key="App.AccentSecondaryBrush" Color="#3B82F6"/>
            <SolidColorBrush x:Key="App.AccentHoverBrush" Color="#8838E0"/>
            <SolidColorBrush x:Key="App.AccentPressedBrush" Color="#7B2BD4"/>
            <SolidColorBrush x:Key="App.TextPrimaryBrush" Color="#F5F5F5"/>
            <SolidColorBrush x:Key="App.TextMutedBrush" Color="#B3B3B3"/>
            <SolidColorBrush x:Key="App.TextTertiaryBrush" Color="#737373"/>

            <!-- Glassmorphism (purple-tinted, heavy transparency) -->
            <LinearGradientBrush x:Key="Glass.SurfaceBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#70141420" Offset="0"/>
                <GradientStop Color="#701A1A2A" Offset="1"/>
            </LinearGradientBrush>
            <LinearGradientBrush x:Key="Glass.CardBrush" StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#601A1A28" Offset="0"/>
                <GradientStop Color="#601E1E30" Offset="1"/>
            </LinearGradientBrush>
            <SolidColorBrush x:Key="Glass.BorderLightBrush" Color="#159070FF"/>
            <SolidColorBrush x:Key="Glass.BorderDarkBrush" Color="#08000010"/>

            <!-- Elevated micro-gradient (GroupBox, cards) — purple-tinted -->
            <LinearGradientBrush x:Key="App.ElevatedGradientBrush" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#262630" Offset="0"/>
                <GradientStop Color="#222228" Offset="1"/>
            </LinearGradientBrush>

            <!-- Accent tri-gradient (Cyan → Purple → Pink) -->
            <LinearGradientBrush x:Key="App.AccentGradientBrush" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#3B82F6" Offset="0"/>
                <GradientStop Color="#9945FF" Offset="0.5"/>
                <GradientStop Color="#E63366" Offset="1"/>
            </LinearGradientBrush>

            <!-- Neon solid brushes -->
            <SolidColorBrush x:Key="Neon.CyanBrush" Color="#3B82F6"/>
            <SolidColorBrush x:Key="Neon.PurpleBrush" Color="#9945FF"/>
            <SolidColorBrush x:Key="Neon.PinkBrush" Color="#E63366"/>
            <SolidColorBrush x:Key="Neon.PurpleSoftBrush" Color="#A57BFF"/>
            <SolidColorBrush x:Key="Neon.GlowCyanBrush" Color="#4D3B82F6"/>
            <SolidColorBrush x:Key="Neon.GlowPurpleBrush" Color="#4D9945FF"/>

            <!-- Neon tri-gradient (horizontal) -->
            <LinearGradientBrush x:Key="Neon.TriGradientBrush" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#3B82F6" Offset="0"/>
                <GradientStop Color="#9945FF" Offset="0.5"/>
                <GradientStop Color="#E63366" Offset="1"/>
            </LinearGradientBrush>

            <!-- Neon tri-gradient (vertical — sidebar edge) -->
            <LinearGradientBrush x:Key="Neon.TriGradientVertBrush" StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#3B82F6" Offset="0"/>
                <GradientStop Color="#9945FF" Offset="0.5"/>
                <GradientStop Color="#E63366" Offset="1"/>
            </LinearGradientBrush>

            <!-- Neon glow border brush (subtle, for panel borders) -->
            <SolidColorBrush x:Key="Neon.GlowBorderBrush" Color="#5C9945FF"/>

            <!-- Panel-specific -->
            <SolidColorBrush x:Key="Panel.TitleBarBrush" Color="#1A1A26"/>
            <SolidColorBrush x:Key="Panel.ResizeHandleBrush" Color="#333333"/>

            <!-- Override default control brushes to enforce dark inputs -->
            <SolidColorBrush x:Key="TextBox.Static.Background" Color="#14171D"/>
            <SolidColorBrush x:Key="TextBox.MouseOver.Background" Color="#181C22"/>
            <SolidColorBrush x:Key="TextBox.Focus.Background" Color="#14171D"/>
            <SolidColorBrush x:Key="TextBox.Static.Border" Color="#1E2128"/>
            <SolidColorBrush x:Key="TextBox.MouseOver.Border" Color="#2A2E37"/>
            <SolidColorBrush x:Key="TextBox.Focus.Border" Color="#9945FF"/>
            <SolidColorBrush x:Key="TextBox.Disabled.Background" Color="#0F1115"/>

            <SolidColorBrush x:Key="ComboBox.Static.Background" Color="#14171D"/>
            <SolidColorBrush x:Key="ComboBox.MouseOver.Background" Color="#181C22"/>
            <SolidColorBrush x:Key="ComboBox.Focus.Background" Color="#14171D"/>
            <SolidColorBrush x:Key="ComboBox.Static.Border" Color="#1E2128"/>
            <SolidColorBrush x:Key="ComboBox.MouseOver.Border" Color="#2A2E37"/>
            <SolidColorBrush x:Key="ComboBox.Focus.Border" Color="#9945FF"/>

            <!-- Global typography / foreground -->
            <Style TargetType="Control">
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="{DynamicResource App.TextPrimaryBrush}" />
            </Style>

            <Style TargetType="Window">
                <Setter Property="Background" Value="{DynamicResource App.BackgroundBrush}" />
            </Style>

            <Style TargetType="TabControl">
                <Setter Property="Background" Value="{DynamicResource App.BackgroundBrush}" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="ItemsPanel">
                    <Setter.Value>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="1" />
                        </ItemsPanelTemplate>
                    </Setter.Value>
                </Setter>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabControl">
                            <DockPanel>
                                <ItemsPresenter x:Name="HeaderPanel"
                                                DockPanel.Dock="Top"
                                                Margin="6,6,6,0" />
                                <Border Background="{TemplateBinding Background}"
                                        BorderThickness="0"
                                        Padding="6,4,6,6">
                                    <ContentPresenter x:Name="PART_SelectedContentHost"
                                                      ContentSource="SelectedContent"
                                                      Margin="0"
                                                      HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Stretch"/>
                                </Border>
                            </DockPanel>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="TabItem">
                <Setter Property="Padding" Value="12,6" />
                <Setter Property="Margin" Value="0,1,2,1" />
                <Setter Property="MinHeight" Value="28" />
                <Setter Property="Foreground" Value="{DynamicResource App.TextPrimaryBrush}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Grid ClipToBounds="False">
                                <Border x:Name="Bd"
                                        CornerRadius="6"
                                        BorderBrush="{DynamicResource App.BorderBrush}"
                                        BorderThickness="0.5"
                                        Padding="{TemplateBinding Padding}">
                                    <Border.Background>
                                        <SolidColorBrush x:Name="BdBg" Color="#1A1A1A"/>
                                    </Border.Background>
                                    <ContentPresenter ContentSource="Header"
                                                      HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <!-- Accent glow indicator (bottom) -->
                                <Border x:Name="Indicator"
                                        Height="1.5"
                                        VerticalAlignment="Bottom"
                                        CornerRadius="0.75"
                                        Margin="10,0,10,0"
                                        Visibility="Collapsed">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#3B82F6" Offset="0"/>
                                            <GradientStop Color="#9945FF" Offset="0.5"/>
                                            <GradientStop Color="#E63366" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                        <Condition Property="IsSelected" Value="False"/>
                                    </MultiTrigger.Conditions>
                                    <MultiTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BdBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#1F1A30" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </MultiTrigger.EnterActions>
                                    <MultiTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BdBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#1A1A20" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </MultiTrigger.ExitActions>
                                </MultiTrigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="#241A3A"/>
                                    <Setter TargetName="Bd" Property="BorderBrush" Value="#2E1A48"/>
                                    <Setter Property="Foreground" Value="{DynamicResource App.AccentBrush}"/>
                                    <Setter TargetName="Indicator" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="Indicator" Property="Background" Value="{DynamicResource App.AccentGradientBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="GroupBox">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="GroupBox">
                            <Grid>
                                <Border CornerRadius="6"
                                        BorderBrush="#3B82F6"
                                        BorderThickness="0.6"
                                        Background="Transparent">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#3B82F6"
                                                          BlurRadius="12"
                                                          ShadowDepth="0"
                                                          Opacity="0.35"/>
                                    </Border.Effect>
                                </Border>
                                <Border Background="#0C1A1A28"
                                        BorderBrush="#1A3B82F6"
                                        BorderThickness="0.6"
                                        CornerRadius="6"
                                        Padding="12,10">
                                    <DockPanel>
                                        <StackPanel Orientation="Horizontal"
                                                    DockPanel.Dock="Top"
                                                    Margin="0,0,0,8">
                                            <Rectangle Width="2" Height="12"
                                                       RadiusX="1" RadiusY="1"
                                                       Fill="{DynamicResource Neon.CyanBrush}"
                                                       Margin="0,0,6,0"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="{TemplateBinding Header}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource Neon.CyanBrush}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <ContentPresenter />
                                    </DockPanel>
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="Border">
                <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="Background" Value="#1A1A24" />
                <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}" />
                <Setter Property="BorderThickness" Value="0.5" />
                <Setter Property="Padding" Value="8,5" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!-- Glow layer (no text children — ClearType safe) -->
                                <Border x:Name="GlowLayer"
                                        CornerRadius="5"
                                        Background="Transparent"
                                        BorderBrush="#009945FF"
                                        BorderThickness="0.5"
                                        Opacity="0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#9945FF"
                                                          BlurRadius="10"
                                                          ShadowDepth="0"
                                                          Opacity="0.35"/>
                                    </Border.Effect>
                                </Border>
                                <!-- Content layer -->
                                <Border x:Name="Root"
                                        CornerRadius="5"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="{TemplateBinding Padding}">
                                    <Border.Background>
                                        <SolidColorBrush x:Name="RootBg" Color="#1A1A24"/>
                                    </Border.Background>
                                    <Border.BorderBrush>
                                        <SolidColorBrush x:Name="RootBorder" Color="#222222"/>
                                    </Border.BorderBrush>
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"
                                                      RecognizesAccessKey="True"/>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="RootBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#1A9945FF" Duration="0:0:0.12"/>
                                                <ColorAnimation Storyboard.TargetName="RootBorder"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#309945FF" Duration="0:0:0.12"/>
                                                <DoubleAnimation Storyboard.TargetName="GlowLayer"
                                                    Storyboard.TargetProperty="Opacity"
                                                    To="1" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="RootBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#1A1A24" Duration="0:0:0.12"/>
                                                <ColorAnimation Storyboard.TargetName="RootBorder"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#222222" Duration="0:0:0.12"/>
                                                <DoubleAnimation Storyboard.TargetName="GlowLayer"
                                                    Storyboard.TargetProperty="Opacity"
                                                    To="0" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="RootBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#339945FF" Duration="0:0:0.01"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="RootBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#1A1A24" Duration="0:0:0.08"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="RootBorder"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#9945FF" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="RootBorder"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#222222" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="CheckBox">
                <Setter Property="Foreground" Value="{DynamicResource App.TextPrimaryBrush}" />
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <StackPanel Orientation="Horizontal" Margin="0,1">
                                <Border x:Name="Box"
                                        Width="15" Height="15"
                                        CornerRadius="3"
                                        BorderThickness="0.5"
                                        VerticalAlignment="Center">
                                    <Border.Background>
                                        <SolidColorBrush x:Name="BoxBg" Color="#1A1A24"/>
                                    </Border.Background>
                                    <Border.BorderBrush>
                                        <SolidColorBrush x:Name="BoxBorderColor" Color="#222222"/>
                                    </Border.BorderBrush>
                                    <Path x:Name="Check"
                                          Data="M 3 8 L 7 12 L 13 4"
                                          Stroke="{DynamicResource App.AccentBrush}"
                                          StrokeThickness="1.5"
                                          StrokeEndLineCap="Round"
                                          StrokeStartLineCap="Round"
                                          Visibility="Collapsed"
                                          Stretch="Uniform"/>
                                </Border>
                                <ContentPresenter Margin="6,0,0,0"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"/>
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Check" Property="Visibility" Value="Visible"/>
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BoxBorderColor"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#9945FF" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BoxBorderColor"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#222222" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BoxBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#201A30" Duration="0:0:0.12"/>
                                                <ColorAnimation Storyboard.TargetName="BoxBorderColor"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#9945FF" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BoxBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#1A1A24" Duration="0:0:0.12"/>
                                                <ColorAnimation Storyboard.TargetName="BoxBorderColor"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#222222" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="TextBlock">
                <Setter Property="Foreground" Value="{DynamicResource App.TextPrimaryBrush}" />
            </Style>

            <Style TargetType="TextBox">
                <Setter Property="Background" Value="#14171D" />
                <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}" />
                <Setter Property="BorderThickness" Value="0.5" />
                <Setter Property="Foreground" Value="{DynamicResource App.TextPrimaryBrush}" />
                <Setter Property="Padding" Value="6,3" />
                <Setter Property="CaretBrush" Value="{DynamicResource App.TextPrimaryBrush}" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="Bd"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="3"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Background>
                                    <SolidColorBrush x:Name="BdBg" Color="#14171D"/>
                                </Border.Background>
                                <Border.BorderBrush>
                                    <SolidColorBrush x:Name="BdBorderColor" Color="#1E2128"/>
                                </Border.BorderBrush>
                                <ScrollViewer x:Name="PART_ContentHost" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Bd" Property="Opacity" Value="0.5"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BdBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#181C22" Duration="0:0:0.12"/>
                                                <ColorAnimation Storyboard.TargetName="BdBorderColor"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#2A2E37" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BdBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#14171D" Duration="0:0:0.12"/>
                                                <ColorAnimation Storyboard.TargetName="BdBorderColor"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#1E2128" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BdBorderColor"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#9945FF" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="BdBorderColor"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#1E2128" Duration="0:0:0.12"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="ComboBox">
                <Setter Property="Background" Value="#14171D" />
                <Setter Property="BorderBrush" Value="{DynamicResource App.BorderBrush}" />
                <Setter Property="BorderThickness" Value="0.5" />
                <Setter Property="Foreground" Value="{DynamicResource App.TextPrimaryBrush}" />
                <Setter Property="Padding" Value="6,3" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBox">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                                              Grid.Column="2"
                                              Focusable="False"
                                              ClickMode="Press"
                                              Background="{TemplateBinding Background}"
                                              BorderBrush="{TemplateBinding BorderBrush}"
                                              BorderThickness="{TemplateBinding BorderThickness}"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                    <ToggleButton.Template>
                                        <ControlTemplate TargetType="ToggleButton">
                                            <Border x:Name="Bd"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="3"
                                                    Padding="{TemplateBinding Padding}">
                                                <Border.Background>
                                                    <SolidColorBrush x:Name="CbBg" Color="#14171D"/>
                                                </Border.Background>
                                                <Border.BorderBrush>
                                                    <SolidColorBrush x:Name="CbBorder" Color="#1E2128"/>
                                                </Border.BorderBrush>
                                                <Grid>
                                                    <ContentPresenter x:Name="ContentSite"
                                                                      Margin="0,0,24,0"
                                                                      VerticalAlignment="Center"
                                                                      HorizontalAlignment="Left"
                                                                      Content="{TemplateBinding Content}"
                                                                      ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                      ContentTemplateSelector="{TemplateBinding ContentTemplateSelector}"
                                                                      RecognizesAccessKey="True"/>
                                                    <Path x:Name="Arrow"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Right"
                                                          Margin="0,0,6,0"
                                                          Width="8"
                                                          Height="5"
                                                          Stretch="Uniform"
                                                          Fill="{DynamicResource App.TextMutedBrush}"
                                                          Data="M 0 0 L 10 0 L 5 6 Z"/>
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="CbBg"
                                                                    Storyboard.TargetProperty="Color"
                                                                    To="#181C22" Duration="0:0:0.12"/>
                                                                <ColorAnimation Storyboard.TargetName="CbBorder"
                                                                    Storyboard.TargetProperty="Color"
                                                                    To="#2A2E37" Duration="0:0:0.12"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="CbBg"
                                                                    Storyboard.TargetProperty="Color"
                                                                    To="#14171D" Duration="0:0:0.12"/>
                                                                <ColorAnimation Storyboard.TargetName="CbBorder"
                                                                    Storyboard.TargetProperty="Color"
                                                                    To="#1E2128" Duration="0:0:0.12"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsKeyboardFocused" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="CbBorder"
                                                                    Storyboard.TargetProperty="Color"
                                                                    To="#9945FF" Duration="0:0:0.12"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="CbBorder"
                                                                    Storyboard.TargetProperty="Color"
                                                                    To="#1E2128" Duration="0:0:0.12"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="CbBorder"
                                                                    Storyboard.TargetProperty="Color"
                                                                    To="#9945FF" Duration="0:0:0.12"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <ColorAnimation Storyboard.TargetName="CbBorder"
                                                                    Storyboard.TargetProperty="Color"
                                                                    To="#1E2128" Duration="0:0:0.12"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="0.5"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </ToggleButton.Template>
                                </ToggleButton>

                                <Popup x:Name="PART_Popup"
                                       AllowsTransparency="True"
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       PopupAnimation="Fade"
                                       Focusable="False"
                                       StaysOpen="False"
                                       PlacementTarget="{Binding ElementName=ToggleButton}">
                                    <Border CornerRadius="5"
                                            BorderThickness="0.8"
                                            Margin="0,2,0,0"
                                            Padding="2">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#E81A1A28" Offset="0"/>
                                                <GradientStop Color="#E81E1E30" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border.BorderBrush>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#309945FF" Offset="0"/>
                                                <GradientStop Color="#20E63366" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.BorderBrush>
                                        <ScrollViewer Style="{x:Null}" Padding="2">
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                    <Setter TargetName="ToggleButton" Property="BorderBrush" Value="{StaticResource ComboBox.Focus.Border}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="ComboBoxItem">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Foreground" Value="{DynamicResource App.TextPrimaryBrush}" />
                <Setter Property="Padding" Value="6,3" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ComboBoxItem">
                            <Border x:Name="Root"
                                    Padding="{TemplateBinding Padding}"
                                    CornerRadius="2">
                                <Border.Background>
                                    <SolidColorBrush x:Name="CbiRoot" Color="#00000000"/>
                                </Border.Background>
                                <ContentPresenter />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsHighlighted" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="CbiRoot"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#1A9945FF" Duration="0:0:0.10"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="CbiRoot"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#00000000" Duration="0:0:0.10"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="CbiRoot"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#289945FF" Duration="0:0:0.01"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="CbiRoot"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#00000000" Duration="0:0:0.10"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ContextMenu / MenuItem / Separator -->
            <Style TargetType="ContextMenu">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="HasDropShadow" Value="True"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ContextMenu">
                            <Grid>
                                <!-- Glow layer (no text — ClearType safe) -->
                                <Border CornerRadius="6"
                                        Background="Transparent"
                                        BorderBrush="#409945FF"
                                        BorderThickness="0.5">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#9945FF"
                                                          BlurRadius="12"
                                                          ShadowDepth="0"
                                                          Opacity="0.25"/>
                                    </Border.Effect>
                                </Border>
                                <!-- Content layer -->
                                <Border CornerRadius="6"
                                        Padding="4"
                                        BorderThickness="0.8">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#F01A1A28" Offset="0"/>
                                            <GradientStop Color="#F01E1E30" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.BorderBrush>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#309945FF" Offset="0"/>
                                            <GradientStop Color="#20E63366" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.BorderBrush>
                                    <StackPanel IsItemsHost="True"
                                                KeyboardNavigation.DirectionalNavigation="Cycle"/>
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="MenuItem">
                <Setter Property="Foreground" Value="{DynamicResource App.TextPrimaryBrush}"/>
                <Setter Property="Padding" Value="10,6"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="MenuItem">
                            <Border x:Name="MiBd"
                                    CornerRadius="3"
                                    Padding="{TemplateBinding Padding}">
                                <Border.Background>
                                    <SolidColorBrush x:Name="MiBg" Color="#00000000"/>
                                </Border.Background>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Icon"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto" SharedSizeGroup="Shortcut"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter x:Name="Icon"
                                                      Content="{TemplateBinding Icon}"
                                                      ContentSource="Icon"
                                                      Margin="0,0,6,0"
                                                      Width="16" Height="16"
                                                      VerticalAlignment="Center"/>
                                    <ContentPresenter Grid.Column="1"
                                                      ContentSource="Header"
                                                      RecognizesAccessKey="True"
                                                      VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="2"
                                               Text="{TemplateBinding InputGestureText}"
                                               Foreground="{DynamicResource App.TextTertiaryBrush}"
                                               Margin="20,0,0,0"
                                               VerticalAlignment="Center"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="Icon" Value="{x:Null}">
                                    <Setter TargetName="Icon" Property="Visibility" Value="Collapsed"/>
                                </Trigger>
                                <Trigger Property="IsHighlighted" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="MiBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#1A9945FF" Duration="0:0:0.10"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="MiBg"
                                                    Storyboard.TargetProperty="Color"
                                                    To="#00000000" Duration="0:0:0.10"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="Separator">
                <Setter Property="Height" Value="1"/>
                <Setter Property="Margin" Value="6,3"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Separator">
                            <Rectangle Height="0.5" Fill="{DynamicResource App.BorderBrush}" Margin="4,2"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ProgressBar -->
            <Style TargetType="ProgressBar">
                <Setter Property="Height" Value="6"/>
                <Setter Property="Background" Value="#1A1A24"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ProgressBar">
                            <Grid>
                                <Border CornerRadius="3"
                                        Background="#1A1A24"
                                        BorderBrush="{DynamicResource App.BorderBrush}"
                                        BorderThickness="0.5"/>
